<div class="product-single-photos {% if product.images.size > 1 %}tp-product-has-thumbnail{% endif %} " id="ProductPhoto">
	{% assign featured_image = current_variant.featured_image | default: product.featured_image %}
	<img src="{{ featured_image | img_url: '1000x' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg" data-zoom-image="{{ featured_image | img_url: '2048x2048' }}">
	<span class="open-fancybox" data-toggle="tooltip" title="{{ 'products.general.view_larger' | t }}" data-placement="left">{{ 'products.general.view_larger' | t }}</span>
</div>