.cart__shipping_shareinfo{
    background-color: #000;
    color: #fff;
    padding: 15px;
    margin: 0 0 20px;
    text-align: center;
}
.cart__shipping_shareinfo p {
    font-weight: 400;
    font-size: 18px;
    color: #fff;
  margin-bottom:0;
}
.cart__shipping_shareinfo p span {
    color: #f1dc28;
    font-weight: 600;
    font-size: 20px;
    letter-spacing: 1px;
}
.cart__shipping_shareinfo p a {
    color: #f1dc28;
}
.cart__shipping_shareinfo p a:hover {
    color: #fff;
}
.minicart-share-text .cart__shipping_shareinfo p{ font-size: 12px;}
.minicart-share-text .cart__shipping_shareinfo span { font-size: 16px;}
.show-msg {padding:10px 20px; background-color:green; color:#ffffff; margin-bottom: 20px;}

@media(max-width:767px){

.cart__shipping_shareinfo p {
    font-size: 16px;
    line-height: 24px;
}
}
