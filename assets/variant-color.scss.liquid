@each $color in $colors {
  $colorName: nth($color, 1);
  $bgColor:   nth($color, 2);
  
  .swatch .swatch-element.color .bg-#{$colorName},
  .tp-filter-color ul li .bg-#{$colorName},
  .item-color-swatch li .bg-#{$colorName} {  
    background-color: $bgColor !important;
  }
}

{% else %}

$patterns: ( 
  'red-green'      'red-green.png', 
  'yellow-black'   'yellow-black.png',
  'blue-orange'    'blue-orange.png'
);

$url_prefix: '{{ '*' | file_url | split: '*' | first }}';
$url_suffix: '{{ '*' | file_url | split: '*' | last }}';

@each $pattern in $patterns {
  $patternName:   nth($pattern, 1);
  $patternImage:  nth($pattern, 2);

  .swatch .swatch-element.color .bg-#{$patternName},
  .tp-filter-color ul li .bg-#{$patternName},
  .item-color-swatch li .bg-#{$patternName} {  
    background-image: url($url_prefix + $patternImage + $url_suffix) !important;
  }
}

{% endif %}